<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <bean id="eventPublisher" class="com.enonic.xp.core.impl.event.EventPublisherImpl"/>

  <reference-list interface="com.enonic.xp.event.EventListener" availability="optional">
    <reference-listener ref="eventPublisher" bind-method="addListener" unbind-method="removeListener"/>
  </reference-list>

  <service ref="eventPublisher" auto-export="interfaces"/>

</blueprint>
