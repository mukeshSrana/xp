<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <bean id="beanManager" class="com.enonic.xp.core.impl.bean.BeanManagerImpl">
    <property name="bundleContext" ref="blueprintBundleContext"/>
  </bean>

  <reference-list interface="org.osgi.service.blueprint.container.BlueprintContainer">
    <reference-listener ref="beanManager" bind-method="addContainer" unbind-method="removeContainer"/>
  </reference-list>

  <service auto-export="interfaces" ref="beanManager"/>

  <service auto-export="interfaces">
    <bean class="com.enonic.xp.core.impl.i18n.LocaleServiceImpl"/>
  </service>

</blueprint>
